{% extends 'base.html.twig' %}

{% block title %}List of games{% endblock %}

{% block body %}

<div class="container">
    <h1>All games</h1>

    <div class="row row-cols-auto">
        {% for game in games %}
            <div class="card col" style="width: 18rem;">
                {% if game.background_image %}
                    <img src={{ game.background_image }} class="card-img-top" alt={{ game.name }}>
                {% endif %}
                <div class="card-body">
                    <h2 class="card-title">{{ game.name }}</h2>
                    {% if app.user %}
                        <a href={{ path('rawg_games', {'id': game.id}) }} class="btn btn-primary">Add favorite</a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    {% if previousPageUrl %}
        <a href={{ path('rawg_games', {'newPageUrl': previousPageUrl}) }}>Previous</a>
    {% endif %}
    {% if nextPageUrl %}
        <a href={{ path('rawg_games', {'newPageUrl': nextPageUrl}) }}>Next</a>
    {% endif %}
</div>
{% endblock %}
