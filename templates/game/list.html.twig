{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div>
		<ul>
			<!--li>Pour revenir à l'accueil : <a href="{{ path('app_home') }}">Accueil</a-->
			<li><a href="{{ path('app_game') }}">Rechercher un Jeux</a>
			<li><a href="{{ path('app_logout') }}">Se déconnecter</a>

		</ul>
	</div>

	<div class="example-wrapper">
		
		</div>

        {# templates/game/list.html.twig #}
        
        <h4>Liste des jeux pour {{ user.email }}</h4>

		<div class="row">
			{% for game in games %}
				<div class="col-3">
					<div class="card" style="width: 18rem;">
						<img src="{{game.imagePath}}" class="card-img-top" alt="...">						
						<p >
						</p>
						<div class="card-body">
							<h5 class="card-title">{{game.name}}</h5>
							<p class="card-text">{{game.description|striptags|slice(0, 100)}}</p>							
						</div>
					</div>
					<div>&nbsp;</div>
				</div>				
			{% endfor %}
		</div>
		
	{% endblock %}
