{% extends 'base.html.twig' %}

{% block title %}Hello GameController!
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div>
		<ul>
			<!--li>Pour revenir Ã  l'accueil : <a href="{{ path('app_home') }}">Accueil</a-->
			<li>Click here to <a href="{{ path('list_game', {id: user.id}) }}">Liste des jeux</a>
			<li>Click here to <a href="{{ path('app_logout') }}">Logout</a>

		</ul>
	</div>

	<div class="example-wrapper">
		{{ form(form) }}
		</div>

		{% if results %}
			<div class="row">
				{% for game in results %}
					<div class="col-3">
						<div class="card" style="width: 18rem;">
							<img src="{{game['background_image']}}" class="card-img-top" alt="...">
                            
                            <p >
                            </p>
							<div class="card-body">
								<h5 class="card-title">{{game['name']}}</h5>
								<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
								<a href="/addgame/{{game['id']}}" class="btn btn-primary">ajouter favoris</a>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>

		{% endif %}

	{% endblock %}
