{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-fluid m-5">
		<div class="row justify-content-center">
			<div class="col-12">
				<h1 class="text-center">Mes jeux</h1>
			</div>
			{% if games %}
				<div class="row">
					{% for game in games %}
						<div class="col-3 my-2">
							<div class="card" style="width: 18rem;">
								<img src="{{game.imagePath}}" class="card-img-top" alt="..." style="width:100%;height:200px;object-fit:cover">
								<div class="card-body">
									<h5 class="card-title">{{game.name}}</h5>
									<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
									<a href="{{path('remove_game_favorites',{id: game.id})}}" class="btn btn-primary">Remove from favorites</a>
									<a href="{{path('details_game',{id: game.idRawgAPI})}}" class="btn btn-primary">See details</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
